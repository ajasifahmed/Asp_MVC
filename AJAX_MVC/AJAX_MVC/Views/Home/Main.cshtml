@model IEnumerable<AJAX_MVC.Models.Employee>

@{
    ViewBag.Title = "Main";
}

<h2>EMPLOYEES</h2>
<div>
    @Html.ActionLink("CREATE","Index","Home")
</div>
@using (Ajax.BeginForm("Main", "Home",
    new AjaxOptions()
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "div1",
        LoadingElementId = "div2",
        LoadingElementDuration = 100,
    }
    ))
 {
    <label>Search:</label>
    <input type="text" name="q" />
    <input type="submit" value="Search" />
 }
<div id="div2" style="display:none;">
    <img src="~/Images/loader.gif" height="40" width="40" alt="Alternate Text" />
</div>
<div id="div1">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.salary)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.salary)
                </td>
            </tr>
        }
    </table>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>